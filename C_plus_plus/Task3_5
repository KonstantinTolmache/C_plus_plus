#include <iostream>
#include <cstdlib>
#include <locale> // Áèáëåîòåêà ðóññêîãî ÿçûêà!

// Ôóíêöèÿ äëÿ ñîðòèðîâêè ýëåìåíòîâ ìàññèâà ïî óáûâàíèþ íà èíòåðâàëå [N1, N2]
void rangeSortDesc3(int mas[], int n, int N1, int N2) {
    // Âíåøíèé öèêë äëÿ ïðîõîäà ïî èíäåêñó îò N1 äî N2
    for (int i = N1; i < N2 - 1; i++) {
        // Âíóòðåííèé öèêë äëÿ ñðàâíåíèÿ ýëåìåíòîâ
        for (int j = i + 1; j < N2; j++) {
            if (mas[i] < mas[j]) { // Åñëè òåêóùèé ýëåìåíò ìåíüøå ñëåäóþùåãî, ìåíÿåì ìåñòàìè
                std::swap(mas[i], mas[j]);
            }
        }
    }
}

// Ôóíêöèÿ äëÿ âûâîäà ìàññèâà íà ýêðàí
void printArray3(int mas[], int n) {
    for (int i = 0; i < n; i++) {
        std::cout << mas[i] << " ";
    }
    std::cout << std::endl;
}

int main10() {
    setlocale(LC_ALL, "Russian"); // Óñòàíàâëèâàåì ðóññêóþ ëîêàëü äëÿ ïîääåðæêè êèðèëëèöû â êîíñîëè
    std::cout << "\033[32mÑêàðåäèí À.Â. ÐÈÇ-230916ó\033[0m" << std::endl; // Çåë¸íûé öâåò ÔÈÎ ÃÐóïïà
    int mas[] = { 2, 5, -8, 1, -4, 6, 3, -5, -9, 13, 0, 4, 9 };
    int n = sizeof(mas) / sizeof(int); // Ðàçìåð ìàññèâà

    // Âûâîäèì èñõîäíûé ìàññèâ
    std::cout << "Äî ñîðòèðîâêè: ";
    printArray3(mas, n);

    // Èíòåðâàë ñîðòèðîâêè îò N1 äî N2
    int N1 = 2, N2 = 7;

    // Ñîðòèðîâêà ýëåìåíòîâ ìàññèâà ïî óáûâàíèþ íà èíòåðâàëå [N1, N2]
    rangeSortDesc3(mas, n, N1, N2);

    // Âûâîäèì ðåçóëüòàò ïîñëå ñîðòèðîâêè
    std::cout << "Ïîñëå ñîðòèðîâêè ïî óáûâàíèþ íà èíòåðâàëå îò N1=" << N1 << " äî N2=" << N2 << ": ";
    printArray3(mas, n);

    return 0;
}