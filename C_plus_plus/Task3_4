#include <iostream> 
#include <cstdlib>
#include <locale> // Áèáëèîòåêà ðóññêîãî ÿçûêà !

// Ôóíêöèÿ äëÿ ñîðòèðîâêè ýëåìåíòîâ ìàññèâà ïî âîçðàñòàíèþ íà èíòåðâàëå [N1, N2]
void rangeSort2(int mas[], int n, int N1, int N2) {
    // Âíåøíèé öèêë äëÿ ïðîõîäà ïî èíäåêñàì îò N1 äî N2
    for (int i = N1; i < N2 - 1; i++) {
        // Âíóòðåííèé öèêë äëÿ ñðàâíåíèÿ ýëåìåíòîâ â èíòåðâàëå [N1, N2]
        for (int j = i + 1; j < N2; j++) {
            // Åñëè òåêóùèé ýëåìåíò áîëüøå ñëåäóþùåãî, ìåíÿåì èõ ìåñòàìè
            if (mas[i] > mas[j]) {
                std::swap(mas[i], mas[j]);
            }
        }
    }
}

// Ôóíêöèÿ äëÿ âûâîäà ìàññèâà íà ýêðàí
void printArray2(int mas[], int n) {
    for (int i = 0; i < n; i++) {
        std::cout << mas[i] << " ";
    }
    std::cout << std::endl;
}

int main9() {
    setlocale(LC_ALL, "Russian"); // Óñòàíàâëèâàåì ðóññêóþ ëîêàëü äëÿ ïîääåðæêè êèðèëëèöû â êîíñîëè
    std::cout << "\033[32mÑêàðåäèí À.Â. ÐÈÇ-230916ó\033[0m" << std::endl; // Çåë¸íûé öâåò ÔÈÎ ÃÐóïïà
    int mas[] = { 2, 5, -8, 1, -4, 6, 3, -5, -9, 13, 0, 4, 9 };
    int n = sizeof(mas) / sizeof(int); // Ðàçìåð ìàññèâà

    // Âûâîäèì èñõîäíûé ìàññèâ
    std::cout << "Äî ñîðòèðîâêè: ";
    printArray2(mas, n);

    // Èíòåðâàë ñîðòèðîâêè îò N1 äî N2
    int N1 = 2, N2 = 7;

    // Ñîðòèðîâêà ýëåìåíòîâ ìàññèâà ïî âîçðàñòàíèþ íà èíòåðâàëå [N1, N2]
    rangeSort2(mas, n, N1, N2);

    // Âûâîäèì ðåçóëüòàò ïîñëå ñîðòèðîâêè
    std::cout << "Ïîñëå ñîðòèðîâêè íà èíòåðâàëå îò N1=" << N1 << " äî N2=" << N2 << ": ";
    printArray2(mas, n);

    return 0;
}